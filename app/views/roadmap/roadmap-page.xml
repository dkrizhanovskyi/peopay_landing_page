<?xml version="1.0" encoding="utf-8" ?>
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="bg-gray-100">
    <ActionBar title="PayPeo Roadmap" class="bg-purple-600 text-white">
        <NavigationButton />
    </ActionBar>

    <ScrollView>
        <StackLayout class="p-4">
            <!-- Phase 1 -->
            <GridLayout columns="auto, *" class="mb-6">
                <StackLayout col="0" class="w-2 h-full bg-purple-200">
                    <Label text="●" class="text-purple-600 text-2xl -ml-2" />
                </StackLayout>
                <StackLayout col="1" class="pl-4">
                    <Label text="Phase 1: Core Development" class="text-xl font-bold text-purple-800" />
                    <Label text="Q2 2024" class="text-sm text-purple-600 mb-2" />
                    <Label text="• Wallet Implementation&#xa;• Payment Infrastructure&#xa;• Security Framework" 
                           class="text-gray-600" textWrap="true" />
                </StackLayout>
            </GridLayout>

            <!-- Phase 2 -->
            <GridLayout columns="auto, *" class="mb-6">
                <StackLayout col="0" class="w-2 h-full bg-purple-200">
                    <Label text="●" class="text-purple-600 text-2xl -ml-2" />
                </StackLayout>
                <StackLayout col="1" class="pl-4">
                    <Label text="Phase 2: DeFi Integration" class="text-xl font-bold text-purple-800" />
                    <Label text="Q3 2024" class="text-sm text-purple-600 mb-2" />
                    <Label text="• Staking Platform&#xa;• Yield Farming&#xa;• Liquidity Pools" 
                           class="text-gray-600" textWrap="true" />
                </StackLayout>
            </GridLayout>

            <!-- Phase 3 -->
            <GridLayout columns="auto, *" class="mb-6">
                <StackLayout col="0" class="w-2 h-full bg-purple-200">
                    <Label text="●" class="text-purple-600 text-2xl -ml-2" />
                </StackLayout>
                <StackLayout col="1" class="pl-4">
                    <Label text="Phase 3: Regional Expansion" class="text-xl font-bold text-purple-800" />
                    <Label text="Q4 2024" class="text-sm text-purple-600 mb-2" />
                    <Label text="• Local Stablecoins&#xa;• Mobile Money Integration&#xa;• Regional Partnerships" 
                           class="text-gray-600" textWrap="true" />
                </StackLayout>
            </GridLayout>

            <!-- Phase 4 -->
            <GridLayout columns="auto, *" class="mb-6">
                <StackLayout col="0" class="w-2 h-full bg-purple-200">
                    <Label text="●" class="text-purple-600 text-2xl -ml-2" />
                </StackLayout>
                <StackLayout col="1" class="pl-4">
                    <Label text="Phase 4: Advanced Features" class="text-xl font-bold text-purple-800" />
                    <Label text="Q1 2025" class="text-sm text-purple-600 mb-2" />
                    <Label text="• Cross-border Remittances&#xa;• Fraud Detection&#xa;• AI-powered Analytics" 
                           class="text-gray-600" textWrap="true" />
                </StackLayout>
            </GridLayout>

            <!-- GitHub Integration -->
            <Button text="View on GitHub" tap="{{ onGitHubTap }}" 
                    class="bg-gray-800 text-white p-4 rounded-lg mb-4" />
        </StackLayout>
    </ScrollView>
</Page>